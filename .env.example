# API Keys
# Replace with your actual keys and rename file to .env

# New York Times API Key
# Get from https://developer.nytimes.com/
NYT_API_KEY=your_nyt_api_key_here

# Anthropic Claude API Key
# Get from https://www.anthropic.com/
CLAUDE_API_KEY=your_claude_api_key_here

# ElevenLabs API Key
# Get from https://elevenlabs.io/
ELEVEN_API_KEY=your_elevenlabs_api_key_here

# Voice Settings
# Leave ELEVEN_VOICE_ID blank to use the first available voice
# or set VOICE_NAME to search for a specific voice by name
ELEVEN_VOICE_ID=
VOICE_NAME=Rachel

# Voice Characteristics (0.0-1.0)
VOICE_STABILITY=0.71
VOICE_CLARITY=0.75
VOICE_STYLE=0.6

# Personalization
USER_NAME=News Listener

# Flask Secret Key (for session management)
FLASK_SECRET_KEY=change_this_to_a_random_string